    <ImageView
        android:id="@+id/akuLogoIV"
        android:layout_width="@dimen/_225sdp"
        android:layout_height="@dimen/_225sdp"
        android:layout_marginStart="@dimen/_minus60sdp"
        android:layout_marginTop="@dimen/_minus60sdp"
        android:alpha="0.04"
