<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.casi_register.ui.other.ZScoreCalculator" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@color/light_gray"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal|center_vertical"
                android:padding="24dp"
                android:text="Z-SCORE CALCULATOR"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

            <androidx.cardview.widget.CardView
                style="@style/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/light_gray"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_overlay"
                        android:padding="4dp"
                        android:text="Age (in months)"
                        android:textColor="@color/black_overlay"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="303" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_overlay"
                        android:padding="4dp"
                        android:text="Gender"
                        android:textColor="@color/black_overlay"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:checkedButton="@id/male"
                        android:padding="8dp">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Female" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="Height"
                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text="95.3" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="Weight"

                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text="13.2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="MUAC"
                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/muac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:text="13.4" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_overlay"
                        android:padding="4dp"
                        android:text="Z-Score"
                        android:textColor="@color/black_overlay"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/ZScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:checkedButton="@id/wa"
                        android:padding="8dp">

                        <RadioButton
                            android:id="@+id/ha"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Height for Age" />

                        <RadioButton
                            android:id="@+id/wa"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Weight for Age" />

                        <RadioButton
                            android:id="@+id/wh"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Weight for Height" />


                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/zsResult"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnZscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:onClick="calculateZScore"
                            android:text="Calculate Z-Score" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="L"
                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txtL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text="0.082" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="M"

                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txtM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text="9.153" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_overlay"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="S"
                                android:textColor="@color/black_overlay"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txtS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text="1.109" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</layout>